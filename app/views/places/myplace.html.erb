<div class="myplace">
  <div class="container my-4">
    <h1>My投稿</h1>

    <div id="map" class="w-auto m-3"></div>

    <div class="table-responsive">
      <table class="table">
        <tbody>
          <% @places.each do |place| %>
            <tr>
              <td><strong>ひとこと</strong><br/>
                <%= place.name %></td>
              <td>
                <div class="btns">
                  <%= link_to '詳細', place, class: "btn btn-orange mx-md-4" %>
                  <%= link_to '編集', edit_place_path(place), class: "btn btn-orange mx-md-4" %>
                  <%= link_to '削除', place, method: :delete, data: { confirm: '本当にこのスポットを削除してもよろしいですか？' }, class: "btn btn-danger mx-md-4" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?key=<%= Rails.application.credentials.dig(:google, :api_key) %>&callback=initViewMap" async defer></script>
