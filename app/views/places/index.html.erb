<p id="notice"><%= notice %></p>

<h1>投稿一覧</h1>

<div id="map" class="w-auto m-3"></div>

<table class="table">
  <thead>
    <tr>
      <th>ひとこと</th>
      <th>くわしく</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.description %></td>
        <td><%= link_to '詳細', place, class: "btn btn-orange" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '投稿する', new_place_path %>



<script src="//maps.google.com/maps/api/js?key=<%= Rails.application.credentials.dig(:google, :api_key) %>&callback=initViewMap" async defer></script>
