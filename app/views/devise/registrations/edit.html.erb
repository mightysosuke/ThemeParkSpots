<div class="container my-4">
  <h2>プロフィールを変更</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <%= f.label :name, class: "col-md-2 col-form-label" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-md-7" %>
    </div>

    <div class="form-group row">
      <%= f.label :nickname, class: "col-md-2 col-form-label" %><br />
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "col-md-7" %>
    </div>

    <div class="actions">
      <%= f.submit "更新する", class: "btn btn-orange my-2" %>
    </div>
  <% end %>

  <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当にアカウントを削除してもよろしいですか？" }, method: :delete, class: "btn btn-danger my-2" %>

  <%= link_to "前の画面に戻る", :back %>
</div>
