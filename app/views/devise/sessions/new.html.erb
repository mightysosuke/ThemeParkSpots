<div class="container my-4">
  <h2>ログインする</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row">
      <%= f.label :account_id, class: "col-md-2 col-form-label" %>
      <%= f.text_field :account_id, autofocus: true, autocomplete: "account_id", class: "col-md-7" %>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "col-md-2 col-form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "col-md-7" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me,class: "form-check-label" %>
      </div>
    <% end %>

    <div class="actions my-4">
      <%= f.submit "ログイン", class: "btn btn-orange" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
