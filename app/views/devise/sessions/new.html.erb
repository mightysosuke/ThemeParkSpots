<div class="container my-4">
  <h2 class="text-center my-4">ログイン</h2>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-twitter py-2 pr-3 mx-auto d-block" do %>
      <i class="fab fa-twitter mr-3"></i><%= "#{OmniAuth::Utils.camelize(provider)}でログイン" %>
    <% end %>
  <% end %>
</div>
